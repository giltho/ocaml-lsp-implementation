{
  "name": "wisl-language-server",
  "version": "0.1.0",
  "description": "Test for building ocaml LSP lib, using esy",
  "license": "MIT",
  "esy": {
    "build": "dune build",
    "release": { "releasedBinaries": [ "wisl" ] }
  },
  "scripts": { "start": "dune exec bin/wisl.exe" },
  "dependencies": {
    "@opam/dune": "*",
    "@opam/extlib": "1.7.5",
    "@opam/lambda-term": "*",
    "@opam/lwt": "4.1.0",
    "@opam/ppx_deriving_yojson": "3.1",
    "@opam/uri": "2.0.0",
    "@opam/yojson": "1.4.1",
    "ocaml": "~4.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "husky": "^1.1.3",
    "@opam/merlin": "^3.0.3",
    "ocaml": "~4.6.0",
    "@opam/utop": "2.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}